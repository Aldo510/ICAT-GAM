<section class="container-fluid" id="show-control">
    <div class="row">
        <div class="col-10 col-sm-9 col-md-8 col-lg-7 col-xl-6 mx-auto">
            <h1 class="h6 text-center gray mt-4">Movimientos almacenarios</h1>
            <h1 class="display-3 text-center text-uppercase" ><%= @course.name %></h1>
            <div class="container-fluid">
            </div>
            <% @movements.each do |movement| %>
                <div class="row border rounded shadow my-2 py-3">
                    <div class=" col-10 mx-auto">
                        <p class="text-center h4 py-2">Movimiento d√≠a: <%= movement.exit_date.to_date.strftime('%d / %b / %y') %></p>
                    </div>
                    <div class=" col-4 mx-auto">
                        Insumo: <%= Supply.find(movement.supply_id).name %>
                    </div>
                    <div class=" col-4 mx-auto">
                        Cantidad retirada: <%= movement.exit_quantity %>
                    </div>
                    <div class=" col-4 mx-auto">
                        Cantidad de insumos en almacen: <%= Supply.find(movement.supply_id).quantity %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</section>