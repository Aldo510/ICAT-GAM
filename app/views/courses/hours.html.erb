<section id="hours" class="container-fluid">
    <div class="row">
        <div class="col-10 mx-auto">
            <h1 class="display-3 text-center my-2">Horas de cursos</h1>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-4 text-center h5">Nombre del curso</div>
                    <div class="col-4 text-center h5">Total horas</div>
                    <div class="col-4 text-center h5"></div>
                </div>
                <% @courses.each do |course| %>
                    <div class="row rounded border p-2">
                        <div class="col-4 text-center">
                            <%= course.name %>
                        </div>
                        <div class="col-4 text-center">
                            <%= course.total_hours %>
                        </div>
                        <div class="col-4 text-center"></div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</section>