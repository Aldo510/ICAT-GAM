<section id="student_show" class="container-fluid">
  <div class="row">
    <div class="col-10 col-sm-9 col-md-8 col-lg-7 col-xl-6 mx-auto">
      <h1 class="display-3 text-center">Vista del estudiante</h1>
      <p><%= @student.full_name %></p>
      <p>Email: <a href="mailto:<%= @student.email%>"><%=@student.email %></a></p>
      <a href="tel:<%= @student.telephone%>"><%=@student.telephone %></a>
      <a href="tel:<%= @student.cellphone%>"><%=@student.cellphone %></a>
      <p>Curp: <%= @student.curp %></p>
      <p><%= @student.taken_courses if @student.taken_courses %></p>
    </div>
  </div>
</section>
