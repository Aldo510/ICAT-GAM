<section id="home" class="container-fluid py-5">
  <div class="row">
    <div class="col-10 col-sm-9 col-md-8 col-lg-7 col-xl-6 mx-auto text-center">
      <h1 id="title" class="display-5 text-capitalize">unidad de capacitación Gustavo A. Madero</h1>
      <p class="text-uppercase display-6 mb-5">Instituto de capacitación para el trabajo</p>
      <%= image_tag "logos/logo_color_extend.png", class: "img-fluid" %>
